<img class="movie-image" src="{{movie.image}}" alt="{{movie.title}}">
<div class="info">
  <a class="back" href="/movies">Go back</a> 
  <h2>{{movie.title}}</h2>
  <h3>Director: {{movie.director}}</h3>
  <h3>Stars:</h3>
  <ul> 
  {{#each movie.stars}}
  <li>{{this}}</li>  
  {{/each}}
  </ul>
  <p>{{movie.description}}</p>

  <ul>
  {{#each movie.showtimes}}
  {{this}}|
  {{/each}}
  </ul>
  </div>
  <a class="edit" href="/movies/update/{{movie.id}}">Edit movie</a> 


